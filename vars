export JEKYLL_VERSION=4.0

export ARGS=(--rm
    --interactive
    --tty
    --volume "${PWD}:/srv/jekyll:Z"
    --volume "${PWD}/vendor/bundle:/usr/local/bundle:Z"
    --volume "$(readlink -f ${PWD}/confidential):/srv/jekyll/confidential:Z"
    --userns keep-id
    jekyll/jekyll:"${JEKYLL_VERSION}")
